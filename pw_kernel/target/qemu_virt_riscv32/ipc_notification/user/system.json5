// IPC Notification Test System Configuration for RISC-V (qemu_virt_riscv32)
//
// This configuration sets up:
// - A "client" app that initiates IPC transactions (like a client task)
// - A "server" app that handles IPC requests (like a driver task)
//
// The channel connects client â†’ server via channel_initiator/channel_handler pair.
{
  arch: {
    type: "riscv",
  },
  kernel: {
    flash_start_address: 0x80000000,
    flash_size_bytes: 261120,
    ram_start_address: 0x81000000,
    ram_size_bytes: 65536,
    interrupt_table: {
      table: {}
    },
  },
  apps: [
    {
      name: "client",
      flash_size_bytes: 261120,
      ram_size_bytes: 65536,
      process: {
        name: "client process",
        objects: [
          {
            // Client uses channel_initiator to send requests to server
            name: "SERVER",
            type: "channel_initiator",
            handler_app: "server",
            handler_object_name: "IPC",
          }
        ],
        threads: [
          {
            name: "client thread",
            stack_size_bytes: 1024,
          },
        ],
      },
    },
    {
      name: "server",
      flash_size_bytes: 261120,
      ram_size_bytes: 65536,
      process: {
        name: "server process",
        objects: [
          {
            // Server uses channel_handler to receive and respond to requests
            name: "IPC",
            type: "channel_handler",
          },
        ],
        threads: [
          {
            name: "server thread",
            stack_size_bytes: 1024,
          },
        ],
      },
    },
  ],
}
