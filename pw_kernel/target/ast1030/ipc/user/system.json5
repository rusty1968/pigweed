// AST1030 User IPC Test Configuration
// ARM Cortex-M4 @ 200 MHz (simulated at 12 MHz for QEMU)
// AST1030 has 640KB usable SRAM (0xA0000 bytes)
//
// Memory Layout (avoids PMSAv7 subregion issues):
//   0x00000000 - 0x00000420: Vector table (1056 bytes)
//   0x00000420 - 0x00020420: Kernel code (128KB)
//   0x00020420 - 0x00060420: Kernel RAM (256KB)
//   0x00060420 - 0x00080420: Initiator app code (128KB)
//   0x00080420 - 0x00088420: Initiator app RAM (32KB)
//   0x00088420 - 0x00098420: Handler app code (64KB)
//   0x00098420 - 0x000A0420: Handler app RAM (32KB)
//   Total: ~640KB
{
    arch: {
        type: "armv7m",
        vector_table_start_address: 0x00000000,
        vector_table_size_bytes: 1056,  // 0x420
    },
    kernel: {
        flash_start_address: 0x00000420,  // After vector table
        flash_size_bytes: 131072,         // 128KB for kernel code
        ram_start_address: 0x00020420,    // RAM starts after 128KB code
        ram_size_bytes: 262144,           // 256KB for kernel data
    },
    apps: [
        {
            name: "initiator",
            flash_size_bytes: 65536,      // 64KB for initiator app
            ram_size_bytes: 16384,        // 16KB RAM for initiator
            process: {
                name: "initiator process",
                objects: [
                    {
                        name: "IPC",
                        type: "channel_initiator",
                        handler_app: "handler",
                        handler_object_name: "IPC",
                    }
                ],
                threads: [
                    {
                        name: "initiator thread",
                        stack_size_bytes: 2048,  // 2KB stack
                    },
                ],
            },
        },
        {
            name: "handler",
            flash_size_bytes: 65536,      // 64KB for handler app
            ram_size_bytes: 16384,        // 16KB RAM for handler
            process: {
                name: "handler process",
                objects: [
                    {
                        name: "IPC",
                        type: "channel_handler",
                    },
                ],
                threads: [
                    {
                        name: "handler thread",
                        stack_size_bytes: 2048,  // 2KB stack
                    },
                ],
            },
        },
    ],
}
